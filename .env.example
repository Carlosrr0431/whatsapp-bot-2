# Configuration for WPPConnect Server

# Token Storage Configuration
# Options: 'file', 'mongodb', 'redis'
TOKEN_STORE_TYPE=file

# File Storage Configuration
CUSTOM_USER_DATA_DIR=/usr/src/wpp-server/wppconnect_tokens/userData/

# MongoDB Configuration (if using mongodb token store)
MONGODB_URL_REMOTE=mongodb://username:password@host:port/database
MONGODB_DATABASE=tokens
MONGODB_COLLECTION=sessions
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_HOST=
MONGODB_PORT=27017

# Redis Configuration (if using redis token store)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=wpp

# Server Configuration
PORT=21465
SECRET_KEY=THISISMYSECURETOKEN
HOST=http://localhost
DEVICE_NAME=WppConnect
POWERED_BY=WPPConnect-Server
